{
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 7,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "browser": true,
        "node": true,
        "commonjs": true,
        "es6": true,
        "shared-node-browser": true,
        "mocha": true
    },
    "globals": {
        "__dirname": true,
        "__DEV__": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "accessor-pairs": 1,
        "array-callback-return": 2,
        "complexity": [1, {"maximum": 10}],
        "dot-notation": 2,
        "eqeqeq": 2,
        "guard-for-in": 2,
        "no-console": 0,
        "no-alert": 2,
        "no-extend-native": 2,
        "no-labels": 2,
        "no-loop-func": 2,
        "no-magic-numbers": 2,
        "yoda": 2,
        "arrow-body-style": 2,
        "prefer-const": 2,
        "prefer-template": 2,
        "prefer-reflect": 2
    }
}